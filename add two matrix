//Write a program to find the addition of two matrices using pointers.


#include <stdio.h>
#include <stdlib.h>

#define MAX_ROWS 100
#define MAX_COLS 100


void read1(int *a,int n,int m){
printf("Enter %d elements : ",n*m);

for(int i=0;i<n;i++){
for(int j=0;j<m;j++){
scanf("%d",a+i*m+j);
}}
}
void display(int *a,int n,int m){
for(int i=0;i<n;i++){
for(int j=0;j<m;j++){
printf("%d ",*(a+i*m+j));}
printf("\n");}
}

void additionOfTwoMatrices(int *a,int *b,int n,int m){
printf("The Addition Matrix is\n");

for(int i=0;i<n;i++){
for(int j=0;j<m;j++){
printf("%d ",*(a+i*m+j)+*(b+i*m+j));
}
printf("\n");
}
}

int main()
{
	int a[MAX_ROWS][MAX_COLS], b[MAX_ROWS][MAX_COLS], m, n, p, q;
	printf("Enter the size of the first matrix : ");
	scanf("%d%d", &m, &n);
	if (m > MAX_ROWS || n > MAX_COLS || m <= 0 || n <= 0)
	{
		printf("Invalid size for the first matrix\n");
		return 1;	// Exit with an error code
	}

	read1(a[0], m, n);

	printf("Enter the size of the second matrix : ");
	scanf("%d%d", &p, &q);
	if (p > MAX_ROWS || q > MAX_COLS || p <= 0 || q <= 0)
	{
		printf("Invalid size for the second matrix\n");
		return 1;	// Exit with an error code
	}

	read1(b[0], p, q);

	printf("The first matrix is\n");
	display(a[0], m, n);

	printf("The second matrix is\n");
	display(b[0], p, q);

	if (m == p && n == q)
	{
		additionOfTwoMatrices(a[0], b[0], m, n);
	}
	else
	{
		printf("Addition is not possible\n");
	}

	return 0;
}

