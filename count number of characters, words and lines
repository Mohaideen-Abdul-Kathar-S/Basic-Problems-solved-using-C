//Write a program to count number of characters, words and lines of given text file.

#include<stdio.h>
void main(){
int nl=0,ch=0,wo=0;
char cha;
FILE *fp;
fp=fopen("TEXT.txt","w");
printf("Enter the text with @ at end : ");
while((cha=getchar())!='@'){
fputc(cha,fp);
}
fputc(cha,fp);
fclose(fp);
fp=fopen("TEXT.txt","r");
while((cha=getc(fp))!='@'){
if(cha=='\n'){
nl++;
wo++;}
else if(cha==' '){
wo++;
}else{
ch++;
}
}

printf("Total characters : %d\nTotal words : %d\nTotal lines : %d\n",ch,++wo,++nl);
fclose(fp);

}
/*

