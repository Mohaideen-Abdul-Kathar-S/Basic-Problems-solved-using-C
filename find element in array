//Write a program to find the Largest and the Smallest elements of the given array elements using pointers.

#include <stdio.h>
#define MAX_SIZE 100


void read1(int *a,int n){
for(int i=0;i<n;i++){
scanf("%d",a+i);
}
}

void largestAndSmallest(int *a,int n){
int l=*a,s=*a;
for(int i=0;i<n;i++){
if(l<*(a+i))
{l=*(a+i);
}
if(s>*(a+i)) 
{s=*(a+i);}
}
printf("largest element = %d\nsmallest element = %d\n",l,s);
}


int main() {
    int arr[MAX_SIZE], n;
    printf("size: ");
    scanf("%d", &n);
    if (n > MAX_SIZE || n <= 0) {
        printf("Invalid array size\n");
        return 1; 
    }
    printf("Enter %d elements: ", n);
    read1(arr, n);
    largestAndSmallest(arr, n);
    return 0;
}
