//Write a program that can add the entries of multiple employees every day at the end of the file

#include<stdio.h>
void main(){
	int n,i;
	char in[10],out[10],buf[100],str[100]="yahya.txt";
	printf("no of employees: ") && scanf("%d",&n);
	FILE *fb;
    fb=fopen(str,"w");
	for(i=1;i<=n;i++){
		printf("login: ") && scanf("%s",in);
		printf("signoff: ") && scanf("%s",out);
		fprintf(fb,"(%d)login: %s\nsingoff: %s\n",i,in,out);
	}
	fclose(fb);
	printf("Employees timings:\n");
	fb=fopen(str,"r");
	while(fgets(buf,sizeof(buf),fb)!=NULL){
		printf("%s",buf);
	}
} 

